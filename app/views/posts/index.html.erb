<!--/header-->
<div class="content">
   <div class="container">
     <div class="content-grids">
       <div class="col-md-8 content-main">
        <% @posts.each do |post| %>
         <div class="content-grid">          
           <div class="content-grid-info">
             <div class="post-image-container" style="background-image: url(<%=post.avatar.url%>);"></div>
             <div class="post-info">
             <h4><%= link_to truncate(post.title), post_path(post) %> <%= post.created_at %></h4>
             <p><%= truncate(post.description, length:300 ) %></p>
             <%= link_to "READ MORE", post_path(post) %>
             </div>
           </div>
           
         </div>
        <% end %> 
        </div>
        <div class="col-md-4 content-right">
         <div class="recent">
           <h3>RECENT POSTS</h3>
           <% cache do %>
           <ul>
           <% @posts.each do |post| %>
           <li><%= link_to post.title, post_path(post) %></li>
           </ul>
           <% end %>
           <% end %>
         </div>
         
         <div class="clearfix"></div>
          <%= form_for @subscriber, :html => { :multipart => true } do |f| %>
          <%= f.label :email %>
          <%= f.text_field :email %>
          <%= f.submit "Subscribe"%>
          <% end %>
         <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
</div> 