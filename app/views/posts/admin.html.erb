<div class="table_container">

<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1>All Posts</h1> <%= link_to 'New Post', new_post_path %>
                <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Post Title</th>
                        <th>Date Created</th>
                        <th>By</th>
                        <th></th>
                      </tr>   
                    <tbody>
                      <% @posts.each do |p| %>
                      <tr>
                        <td><%= p.title %></td>
                        <td><%= p.created_at %></td>
                        <td><%= p.name %></td>
                        <td><%= link_to 'Edit', edit_post_path(p) %> </td>
                      </tr>
                      <% end %>
                    </tbody>  
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>
</div>